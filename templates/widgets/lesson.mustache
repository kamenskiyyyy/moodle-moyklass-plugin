{{#lesson}}
    <div class="card bg-light container">
        <div class="row">
            <div class="col-sm-4 card-body">
                <h5 class="card-title">{{dayOfWeek}}</h5>
                <h5 class="card-title">{{newDate}}</h5>
                <h6 class="card-subtitle text-muted">{{begintime}}-{{endtime}}</h6>
            </div>
            <div class="col-sm-8 card-body">
                <h5 class="card-title">{{name_group}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{teachers}}</h6>
                {{^block_cancel}}
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#cancel-{{recordId}}">
                        Отменить
                    </button>
                {{/block_cancel}}
                {{#visited}}
                    <div class="mt-3 p-2 alert-success border-radius" style="width: 120px;">✅ Проведен</div>
                {{/visited}}
            </div>
        </div>
    </div>
{{/lesson}}

<!-- Modal -->
<div class="modal fade" id="cancel-{{recordId}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Отмена урока</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы уверены, что хотите отменить этот урок?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Нет</button>
                <button type="button" class="btn btn-primary"
                        onclick="location.href='{{cancelUrl}}?lessonid={{recordId}}'">Да</button>
            </div>
        </div>
    </div>
</div>
